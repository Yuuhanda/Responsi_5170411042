<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/username_judul_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/username_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/email_daftar_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="email"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/email_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/password_judul_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="Password"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/password_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/password_ulang_judul_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="Konfirmasi Password"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/password_ulang_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/tanggallahir_judul_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:text="Tanggal Lahir"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tanggal_lahir_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:ems="10"
                android:inputType="date" />

            <Button
                android:id="@+id/button_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:text="Daftar" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>